<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">
    <smartTable:SmartTable id="idWorkListTable" entitySet="MapFeaturePermission" enableAutoBinding="true" initialNoDataText="{i18n>tableNoDataText}" width="100%" editable="false"  beforeRebindTable="onBindTblComplainList" tableType="ResponsiveTable" showRowCount="true" useExportToExcel="false" useVariantManagement="false" useTablePersonalisation="false" demandPopin="false" requestAtLeastFields="Id,DGATypeId,FeatureId" >
        <Table growing="true" growingThreshold="10" growingScrollToLoad="false" noDataText="{i18n>tableNoDataText}">
            <columns>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "AppFeature/Name", "leadingProperty": "AppFeature/Name", "columnIndex": 0 ,"sortProperty": "AppFeature/Name","filterProperty": "AppFeature/Name"}'/>
                    </customData>
                    <Text text="{i18n>FeatureName}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "IsActive", "leadingProperty": "IsActive", "columnIndex": 1 ,"sortProperty": "IsActive","filterProperty": "IsActive"}'/>
                    </customData>
                    <Text text="{i18n>isActive}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem press="onListItemPress">
                    <cells>
                        <Text text="{AppFeature/Name}"/>
                        	<Switch state="{IsActive}" change="onChange">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Switch>
                      
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>
