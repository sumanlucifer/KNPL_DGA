<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		noDataText="No Date Found"
		title="DGA List"
        growing="true"
        growingThreshold="15"
		search=".onDGAValueHelpSearch"
		confirm=".onDGAValueHelpClose"
		cancel=".onDGAValueHelpClose"
		showClearButton="true"
		items="{
			path: '/DGAs',
			sorter: {
				path: 'GivenName',
				descending: false
			}
		}">
		<StandardListItem
			title="{GivenName}"
			description="Mob: {Mobile}" />
	</SelectDialog>
</core:FragmentDefinition>