<mvc:View height="100%" controllerName="com.knpl.dga.taskapproval.controller.Detail" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <f:DynamicPage busy="{oModelDisplay>/PageBusy}" busyIndicatorDelay="0"	stickySubheaderProvider="iconTabBar"
			class="sapUiNoContentPadding" showFooter="true" id="dynamicPageId" headerExpanded="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{Visit/TargetLead/ConsumerName}"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="{i18n>LeadDetails}">
                        <Link text="{i18n>MainObject}" press="onNavToHome"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:expandedContent>
                    <Label text="ID: {Visit/TargetLead/Id}"/>
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="ID: {Visit/TargetLead/Id}"/>
                </f:snappedContent>
                <f:snappedTitleOnMobile>
                    <Title text="ID: {Visit/TargetLead/Id}"/>
                </f:snappedTitleOnMobile>
                <f:actions>
                    <Button press="onPressApprove" type="Emphasized" text="{i18n>Approve}" />
                    <Button press="onPressReject" type="Reject" text="{i18n>Reject}" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="false">
                    <layout:VerticalLayout class="sapUiSmallMarginEnd">
                        <ObjectAttribute title="{i18n>DGAName}" text="{Visit/DGA/GivenName}"/>
                        <ObjectAttribute title="{i18n>DealerName}" text="{= ${Visit/TargetLead/SourceDealerId} === null ? 'NA' : ${Visit/TargetLead/SourceDealer/Name}}"/>
                        <ObjectAttribute title="{i18n>ContractorName}" text="{= ${Visit/TargetLead/SourceContractorId} === null ? 'NA' : ${contractorModel>/TargetContractor/Name} }"/>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd" >
                        <Label  text="{i18n>RequestID}"  />
                        <ObjectStatus class="sapMObjectStatusLarge" text="{Visit/Id}"/>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <Label  text="{i18n>Status}"/>
                        <ObjectStatus class="sapMObjectStatusLarge" text="{Visit/TargetLead/LeadStatus/Name}" 
                            state="{= ${Visit/TargetLead/LeadStatus/Name} === 'Converted' ? 'Success' : 'Warning'}"/>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <Label  text="{i18n>Approval}"/>
                        <ObjectStatus class="sapMObjectStatusLarge" text="{Visit/Status}" 
                            state="{= ${Visit/Status} === 'Approved' ? 'Success' : 'Warning'}"/>
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <IconTabBar  select="onIcnTbarChange" selectedKey="{oModelDisplay>/IcnTabKey}" expandable="false" expanded="true" id="iconTabBar" class="sapUiResponsiveContentPadding" >
                <items>
                    <IconTabFilter  text="{i18n>VisitDetails}" key="0" >
                        <core:Fragment fragmentName="com.knpl.dga.taskapproval.view.fragments.LeadVisitDetails" type="XML"/>
                    </IconTabFilter>
                    <IconTabFilter  text="{i18n>SiteDetails}" key="1" >
                        <core:Fragment fragmentName="com.knpl.dga.taskapproval.view.fragments.SiteDetails" type="XML"/>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </f:content>
    </f:DynamicPage>
</mvc:View>
