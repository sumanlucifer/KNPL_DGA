                        visibleInFilterBar="true">
                        <fb:control>   
                            <m:ComboBox placeholder="{i18n>enterPainterArcheType}" items="{/MasterArcheTypes}" selectedKey="{path:'oModelControl>/Search/PainterVh/ArcheType' }">
                                <core:Item text="{ArcheType}" key="{Id}" />
