                        <fb:control>
                            <m:Input value="{oModelControl>/Search/PainterVh/Mobile}"  name="Mobile" placeholder="{i18n>enterMobile}"/>
                        </fb:control>
                    </fb:FilterGroupItem> -->
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
