<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
    <ValueHelpDialog
        title="DGA's"
        ok=".onValueHelpOkPressPainter"
        cancel=".onValueHelpCancelPressPainter"
        afterClose="onValueHelpAfterClose"
        afterOpen=".onValueHelpAfterOpenPainter"
        supportRanges="false"
        key="Id"
        descriptionKey="DGAName">
        <filterBar>
            <fb:FilterBar advancedMode="false" search="onFilterBarSearchPainter" showRestoreButton="true" showRestoreOnFB="true" reset="onClearPainterVhSearch">
                 <fb:filterGroupItems>
                   <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Search"
                        label="Search"
                        visibleInFilterBar="true">
                        <fb:control>
                              <m:Input value="{oModelControl>/Search/PainterVh/Search}" name="Search" placeholder="Search"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="ZoneId"
                        label="Zone"
                        visibleInFilterBar="true">
                        <fb:control>
                             <m:ComboBox id="idPVhSingleZone" placeholder="{i18n>Zone}" selectionChange="onPVhZoneChange"  items="{/MasterZones}" selectedKey="{path:'oModelControl>/Search/PainterVh/ZoneId' }">
                                    <core:Item text="{Id} " key="{Id}" />
                             </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                  <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="DivisionId"
                        label="Division"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:ComboBox id="idPVhDivision" selectionChange="onPVhDivisionChange" enabled="{= ${oModelControl>/Search/PainterVh/ZoneId}.length>1}" placeholder="{i18n>Division}"   items="{/MasterDivisions}" selectedKey="{path:'oModelControl>/Search/PainterVh/DivisionId'}">
                                <core:Item text="{Id}" key="{Id}" />
                            </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                     <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Depot/Depot"
                        label="Depot"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:ComboBox id="idPVhDepot"  enabled="{= ${oModelControl>/Search/PainterVh/DivisionId}.length>1}"  placeholder="{i18n>Depot}"  items="{/MasterDepots}" selectedKey="{path:'oModelControl>/Search/PainterVh/DepotId' }">
                                <core:Item text="{Depot} ( {Id} )" key="{Id}" />
                            </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="PayrollCompany"
                        label="Paytoll Company"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:ComboBox  placeholder="{i18n>PayrollCompany}"  items="{/MasterPayrollCompanies}" selectedKey="{path:'oModelControl>/Search/PainterVh/PayrollCompany' }">
                                <core:Item text="{Name}" key="{Id}" />
                            </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                     <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="DGAType"
                        label="DGA Type"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:ComboBox  placeholder="{i18n>DGAType}"   items="{path:'/MasterDGATypes',filters:[{path:'IsArchived',operator:'EQ' , value1:false}]}" selectedKey="{path:'oModelControl>/Search/PainterVh/DgaType' }">
                                <core:Item text="{Name}" key="{Id}" />
                            </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Status"
                        label="DGA Status"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:ComboBox  placeholder="{i18n>DGAType}"   selectedKey="{path:'oModelControl>/Search/PainterVh/Status' }">
                                <core:Item text="Activated" key="ACTIVATED"/>
                            <core:Item text="Deactivated" key="DEACTIVATED"/>
                            </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
