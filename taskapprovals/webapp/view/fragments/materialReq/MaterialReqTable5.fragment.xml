<core:FragmentDefinition xmlns="sap.m" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core">
    <smartTable:SmartTable
                           id="idMaterialsReqTable5"
                            editable="false"
                            width="100%"
                            entitySet="MaterialRequisitionEquipments"
                            beforeRebindTable="onBeforeBindMatReqTbl5"
                            tableType="ResponsiveTable"
                            showRowCount="true"
                            useExportToExcel="false"
                            useVariantManagement="false"
                            useTablePersonalisation="false"
                            demandPopin="true"
                            enableAutoBinding="false"
                            placeToolbarInTable="true"
                            persistencyKey="HistoryPersistenceKey"
                            initialNoDataText="{i18n>tableNoDataText}"
                            header="{i18n>Equipment}">

        <Table growing="true" growingThreshold="10" growingScrollToLoad="false" noDataText="{i18n>tableNoDataText}">
            <columns>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Equipment/Name", "leadingProperty": "Equipment/Name", "sortProperty": "Equipment/Name", "filterProperty": "Equipment/Name", "columnIndex": 0 }'/>
                    </customData>
                    <Text text="{i18n>EquipmentName}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Count", "leadingProperty": "Count", "sortProperty": "Count", "filterProperty": "Count", "columnIndex": 1 }'/>
                    </customData>
                    <Text text="{i18n>Quantity}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>                  
                       <Text text="{Equipment/Name}"/>
                       <Text text="{Count}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>
