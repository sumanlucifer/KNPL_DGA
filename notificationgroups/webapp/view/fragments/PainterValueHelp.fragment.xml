    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
    <ValueHelpDialog
        title="DGA's"
        ok=".onValueHelpOkPressPainter"
        cancel=".onValueHelpCancelPressPainter"
        afterClose="onValueHelpAfterClose"
        afterOpen=".onValueHelpAfterOpenPainter"
        supportRanges="false"
        key="Id"
        descriptionKey="DGAName">
        <filterBar>
            <fb:FilterBar advancedMode="false" search="onFilterBarSearchPainter" showRestoreButton="true" showRestoreOnFB="true" reset="onClearPainterVhSearch">
                 <fb:filterGroupItems>
                   <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="ZoneId"
                        label="Zone"
                        visibleInFilterBar="true">
                        <fb:control>
                             <m:ComboBox id="idPVhSingleZone" placeholder="{i18n>Zone}" selectionChange="onPVhZoneChange"  items="{/MasterZones}" selectedKey="{path:'oModelControl>/Search/PainterVh/ZoneId' }">
                                    <core:Item text="{Id} " key="{Id}" />
                             </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="DivisionId"
                        label="Division"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:ComboBox id="idPVhDivision" selectionChange="onPVhDivisionChange" enabled="{= ${oModelControl>/Search/PainterVh/ZoneId}.length>1}" placeholder="{i18n>Division}"   items="{/MasterDivisions}" selectedKey="{path:'oModelControl>/Search/PainterVh/DivisionId'}">
                                <core:Item text="{Id}" key="{Id}" />
                            </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Depot/Depot"
                        label="Depot"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:ComboBox id="idPVhDepot"  enabled="{= ${oModelControl>/Search/PainterVh/DivisionId}.length>1}"  placeholder="{i18n>Depot}"  items="{/MasterDepots}" selectedKey="{path:'oModelControl>/Search/PainterVh/DepotId' }">
                                <core:Item text="{Depot} ( {Id} )" key="{Id}" />
                            </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
