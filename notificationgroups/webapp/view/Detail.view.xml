<mvc:View controllerName="com.knpl.dga.notificationgroups.controller.Detail" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified" xmlns:uxap="sap.uxap" xmlns:l="sap.ui.layout">
	<uxap:ObjectPageLayout id="ObjectPageLayoutEdit" showAnchorBar="true" showFooter="true" subSectionLayout="TitleOnLeft"
	busy="{oModelDisplay>/PageBusy}" busyIndicatorDelay="0" class="sapUiResponsiveContentPadding">
		<uxap:headerTitle>
			<uxap:ObjectPageHeader objectTitle="{i28n>NotificationGroupDeatils}">
                <uxap:breadcrumbs>
                    <Breadcrumbs  currentLocationText="Group Details">
                        <Link text="Notification Groups" press="onCancel"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
            </uxap:ObjectPageHeader>
		</uxap:headerTitle>
		<uxap:sections>
			<uxap:ObjectPageSection title="{i18n>Group}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<!-- <core:Fragment fragmentName="com.knpl.dga.notificationgroups.view.fragments.AddForm1" type="XML"/> -->
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="{i18n>TargetGroup}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
							<!-- <core:Fragment fragmentName="com.knpl.dga.notificationgroups.view.fragments.AddForm2" type="XML"/> -->
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
             <uxap:ObjectPageSection title=" " visible="{= ${oModelControl>/Rbtn/TarGrp} === 1 }" >
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                            	<!-- <core:Fragment fragmentName="com.knpl.dga.notificationgroups.view.fragments.AddForm3" type="XML"/> -->
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="{i18n>Members}"  visible="{= ${oModelControl>/Rbtn/TarGrp} === 0 }">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                            	<!-- <core:Fragment fragmentName="com.knpl.dga.notificationgroups.view.fragments.AddForm4" type="XML"/> -->
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>Cancel}" type="Ghost" press="onNavToHome"/>
				<Button text="{i18n>Save}" type="Emphasized" press="onPressSave" />
			</Toolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>