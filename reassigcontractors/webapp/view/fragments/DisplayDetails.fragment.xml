<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
     <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="4" columnsM="4" singleContainerFullSize="false">
        <f:content>
            <core:Title text="{i18n>ComplaintDetails}" />
            <!-- <Label text="{i18n>LeadId}" />
            <Text text="{LeadId}" /> -->
            <Label text="{i18n>ConsumerName}" />
            <Text text="{Lead/ConsumerName}" />
            <Label text="{i18n>conPhoneNo}"  />
            <Text text="{Lead/PrimaryNum}"/>
            <Label text="{i18n>ReqDate}"  />
            <Text text="{path:'CreatedAt',type:'sap.ui.model.odata.type.DateTime',formatOptions:{pattern:'dd/MM/YYYY'}}"/>
            <Label text="{i18n>Description}"/>
            <ExpandableText overflowMode="Popover" text="{Description}" />
             <Label text="{i18n>Remark}" />
            <Text text="{Remark}" />
            <core:Title text="{i18n>DgaDetails}" />
            <Label text="{i18n>DgaName}" />
            <Text text="{DGA/GivenName}" />
            <Label text="{i18n>DgaId}" />
            <Text text="{DGA/Id}" />
            <Label text="{i18n>Zone}" />
            <Text text="{DGA/Zone}" />
            <Label text="{i18n>Division}" />
            <Text text="{DGA/DivisionId}" />
            <core:Title text="{i18n>precontDetails}" />
            <Label text="{i18n>ContractorName}"  />
         <Text text="{= ${PreviousContractorId} ? ${PreviousContractor} ? ${PreviousContractor/Name} : 'NA' : ${PreviousContractor/Name} ? ${PreviousContractor/Name} : 'NA' }" />
            <!-- <Text text="{= ${PreviousContractorId}  ? ${PreviousContractor/Name} : 'NA' }"/> -->
            <Label text="{i18n>ContractorMobile}" />
            <Text text="{= ${PreviousContractorId} ? ${PreviousContractor} ? ${PreviousContractor/Mobile}   : 'NA': ${PreviousContractor/Mobile} ? ${PreviousContractor/Mobile} : 'NA'  }" />
            <Label text="{i18n>MembershipCard}" />
            <Text text="{= ${PreviousContractorId} ? ${PreviousContractor} ? ${PreviousContractor/MembershipCard}   : 'NA' : ${PreviousContractor/MembershipCard} ? ${PreviousContractor/MembershipCard} : 'NA'}" />
            <core:Title text="{i18n>reassigncontDetails}" />
            <Label text="{i18n>reassigncontractor}" />
            <Text text="{= ${ReassignedContractorId} ? ${ReassignedContractor} ? ${ReassignedContractor/Name} :'NA'  : ${ReassignedContractor/Name} ? ${ReassignedContractor/Name} :'NA' }" />
            <Label text="{i18n>ContractorPhoneno}" />
            <Text text="{= ${ReassignedContractorId} ? ${ReassignedContractor} ? ${ReassignedContractor/Mobile} :'NA'  : ${ReassignedContractor/Mobile} ? ${ReassignedContractor/Mobile} :'NA' }" />
            <Label text="{i18n>MembershipCard}" />
            <Text text="{= ${ReassignedContractorId} ? ${ReassignedContractor} ? ${ReassignedContractor/MembershipCard} :'NA'  : ${ReassignedContractor/MembershipCard} ? ${ReassignedContractor/MembershipCard} :'NA' }" />
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
