<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
		<SelectDialog
		title="{i18n>Depot}"
         growing="true"
        growingThreshold="8"
        rememberSelections="false"
		class="sapUiPopupWithPadding"
		items="{path:'/MasterDepots',sorter:{path:'Depot'},parameters:{select:'Id,Depot'} }"
	    search="_handlePValueHelpSearch"
		confirm="_handleDepotValueHelpConfirm"
        cancel="_onDialogClose"
		multiSelect="false">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
            title="{Depot} ({Id})"
	    />
	</SelectDialog>
</core:FragmentDefinition>
