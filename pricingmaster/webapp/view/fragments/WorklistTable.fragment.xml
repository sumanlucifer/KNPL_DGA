                    </customData>
                    <Text text="{i18n>Primer}"/>
                 </Column>

                   <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Product/ProductName", "leadingProperty": "Product/ProductName", "columnIndex": 4 ,"sortProperty": "Product/ProductName","filterProperty": "Product/ProductName"}'/>
                    </customData>
                    <Text text="{i18n>Product}"/>
                </Column>
                  <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "PaintType/Name", "leadingProperty": "PaintType/Name", "columnIndex": 5 ,"sortProperty": "PaintType/Name","filterProperty": "PaintType/Name"}'/>
                    </customData>
                    <Text text="{i18n>PaintingType}"/>
                </Column>

                  <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "System/Name", "leadingProperty": "System/Name", "columnIndex": 6 ,"sortProperty": "System/Name","filterProperty": "System/Name"}'/>
                    </customData>
                    <Text text="{i18n>System}"/>
                </Column>
                  <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Plan/ServiceSubType", "leadingProperty": "Plan/ServiceSubType", "columnIndex": 7 ,"sortProperty": "Plan/ServiceSubType","filterProperty": "Plan/ServiceSubType"}'/>
                    </customData>
                    <Text text="{i18n>Plan}"/>
                </Column>
                  <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ValueAddition/Name", "leadingProperty": "ValueAddition/Name", "columnIndex": 8 ,"sortProperty": "ValueAddition/Name","filterProperty": "ValueAddition/Name"}'/>
                    </customData>
                    <Text text="{i18n>Value} {i18n>Addition}"/>
                </Column>
                  <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ContractorRate", "leadingProperty": "ContractorRate", "columnIndex": 9 ,"sortProperty": "ContractorRate","filterProperty": "ContractorRate"}'/>
                    </customData>
                    <Text text="{i18n>Contractor} {i18n>DGA} ({i18n>squarefit})"/>
                </Column>

                  <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "DealerRate", "leadingProperty": "DealerRate", "columnIndex": 10 ,"sortProperty": "DealerRate","filterProperty": "DealerRate"}'/>
                    </customData>
                    <Text text="{i18n>Dealer} {i18n>DGA} ({i18n>squarefit})"/>
                </Column>  
                
