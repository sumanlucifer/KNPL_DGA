<mvc:View height="100%" xmlns:smartTable="sap.ui.comp.smarttable" controllerName="com.knpl.dga.pricingmaster.controller.Worklist" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <f:DynamicPage busyIndicatorDelay="0" busy="{oModelControl>/PageBusy}" id="dynamicPageId" headerExpanded="true">
    
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar showRestoreButton="false" id="filterbar" reset="onResetFilterBar" search="onFilterBarSearch" useToolbar="false" showRestoreOnFB="true">
                        <fb:filterGroupItems>
                               <fb:FilterGroupItem groupName="__$INTERNAL$" name="Zone" label="{i18n>Zone}"  visibleInFilterBar="true" class="searchFieldLabelHidden">
                                   <fb:control>
                                        <ComboBox id="idZone" placeholder="{i18n>Enter} {i18n>Zone}"  selectionChange="onZoneChange"  items="{/MasterZones}" selectedKey="{path:'oModelControl>/filterBar/ZoneId' }">
                                             <core:Item text="{Id} " key="{Id}" />
                                        </ComboBox>
                                   </fb:control>
                               </fb:FilterGroupItem>
                               <fb:FilterGroupItem groupName="__$INTERNAL$" name="Division" label="{i18n>Division}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                   <fb:control>
                                        <ComboBox  enabled="{= ${oModelControl>/filterBar/ZoneId}.length>1}"   placeholder="{i18n>Enter} {i18n>Division}" id="idDivision" selectionChange="onDivisionChange" items="{/MasterDivisions}" selectedKey="{path:'oModelControl>/filterBar/DivisionId'}">
                                            <core:Item text="{Id}" key="{Id}" />
                                        </ComboBox>
                                    </fb:control>
                               </fb:FilterGroupItem>
                               <fb:FilterGroupItem groupName="__$INTERNAL$" name="Depot" label="{i18n>Depot}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                  <fb:control>
                                      <Input id="idDepot" enabled="{= ${oModelControl>/filterBar/DivisionId}.length>1}"  placeholder="{i18n>Enter} {i18n>Depot}"  valueHelpOnly="true" showValueHelp="true" valueHelpRequest="_handleDepotValueHelp"  value="{path:'oModelControl>/AddFields/Depot'}"/>
                                    
                                   </fb:control>
                               </fb:FilterGroupItem>


                               <fb:FilterGroupItem groupName="__$INTERNAL$" name="Category" label="{i18n>Category}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                   <fb:control>
                                       <ComboBox placeholder="{i18n>Select} {i18n>Category}" items="{path:'/MasterPaintingReqs',sorter:{path:'Name'},filters:[{path:'IsArchived',operator:'EQ',value1:false}] }" selectedKey="{path:'oModelControl>/filterBar/CategoryId'}"  >
                                           <items>
                                               <core:Item text="{Name}" key="{Id}" />
                                           </items>
                                       </ComboBox>
                                   </fb:control>
                               </fb:FilterGroupItem>

                               <fb:FilterGroupItem groupName="__$INTERNAL$" name="Class" label="{i18n>Class}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                   <fb:control>
                                       <ComboBox placeholder="{i18n>Select} {i18n>Class}" items="{path:'/MasterServiceClassifications',sorter:{path:'Name'}}" selectedKey="{path:'oModelControl>/filterBar/ClassId'}"  >
                                            <items>
                                                <core:Item text="{Name}" key="{ID}" />
                                           </items>
                                       </ComboBox>
                                   </fb:control>
                               </fb:FilterGroupItem>
                            
                              <fb:FilterGroupItem groupName="__$INTERNAL$" name="Product" label="{i18n>Product}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                 <fb:control>
                                       <ComboBox placeholder="{i18n>Select} {i18n>Product}" items="{path:'/MasterProducts',sorter:{path:'ProductName'} }" selectedKey="{path:'oModelControl>/filterBar/ProductId'}"  >
                                          <items>
                                              <core:Item text="{ProductName}" key="{Id}" />
                                           </items>
                                       </ComboBox>
                                 </fb:control>
                              </fb:FilterGroupItem>
                              <fb:FilterGroupItem groupName="__$INTERNAL$" name="Paint Type" label="{i18n>PaintingType}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                   <fb:control>
                                        <ComboBox placeholder="{i18n>Select} {i18n>PaintingType}" items="{path:'/MasterPaintTypes',sorter:{path:'Name'},filters:[{path:'IsArchived',operator:'EQ',value1:false}] }" selectedKey="{path:'oModelControl>/filterBar/PaintTypeId'}"  >
                                             <items>
                                                <core:Item text="{Name}" key="{Id}" />
                                             </items>
                                        </ComboBox>
                                    </fb:control>
                              </fb:FilterGroupItem>
                              <fb:FilterGroupItem groupName="__$INTERNAL$" name="Plan" label="{i18n>Plan}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                  <fb:control>
                                       <ComboBox placeholder="{i18n>Select} {i18n>Plan}" items="{path:'/MasterServiceSubTypes',sorter:{path:'ServiceSubType'}}" selectedKey="{path:'oModelControl>/filterBar/PlanId'}"  >
                                          <items>
                                             <core:Item text="{ServiceSubType}" key="{Id}" />
                                          </items>
                                      </ComboBox>
                                   </fb:control>
                               </fb:FilterGroupItem>  
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
              <core:Fragment fragmentName="com.knpl.dga.pricingmaster.view.fragments.WorklistTable" type="XML"/>
        </f:content>
    </f:DynamicPage>
</mvc:View>
