<mvc:View height="100%" xmlns:smartTable="sap.ui.comp.smarttable" controllerName="com.knpl.dga.complains.controller.Worklist" 
    xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" 
    xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants" 
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" 
	xmlns:unified="sap.ui.unified">
    <f:DynamicPage id="dynamicPageId" headerExpanded="true">
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar showRestoreButton="false" id="filterbar" reset="onResetFilterBar" search="onFilter" useToolbar="false" showRestoreOnFB="true">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="ComplaintType" label="{i18n>ComplaintType}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <ComboBox change="onComplaintsChange" placeholder="{i18n>Enter} {i18n>ComplaintType}" items="{path:'/MasterComplainTypes',sorter:{path:'ComplaintType'},filters:[{path:'IsArchived',operator:'EQ',value1:false}] }" selectedKey="{oModelControl>/filterBar/ComplaintTypeId}">
                                        <core:Item text="{ComplaintType}" key="{Id}"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <!-- <fb:FilterGroupItem groupName="__$INTERNAL$" name="ApprovalStatus" label="{i18n>ApprovalStatus}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <ComboBox placeholder="{i18n>Enter} {i18n>ApprovalStatus}" selectedKey="{oModelControl>/filterBar/ApprovalStatus}">
                                        <core:Item text="Pending" key="PENDING"/>
                                        <core:Item text="Approved" key="APPROVED"/>
                                        <core:Item text="Rejected" key="REJECTED"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem> -->
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="LeadStage" label="{i18n>LeadStage}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <ComboBox placeholder="{i18n>Enter} {i18n>LeadStage}" selectedKey="{oModelControl>/filterBar/LeadStage}">
                                        <core:Item text="Ongoing" key="ONGOING"/>
                                        <core:Item text="Completed" key="COMPLETED"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                              <fb:FilterGroupItem groupName="__$INTERNAL$" name="ComplaintID" label="{i18n>ComplaintID}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <Input placeholder="{i18n>Enter} {i18n>ComplaintID}" id="idPayrollCompanyAdd" value="{path:'oModelControl>/filterBar/ComplaintID' }"
                                    showValueHelp="true"
                                    valueHelpRequest="onValueHelpRequest" />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="ComplaintStatus" label="{i18n>ComplaintStatus}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <ComboBox placeholder="{i18n>Enter} {i18n>Status}" selectedKey="{oModelControl>/filterBar/ComplaintStatus}">
                                        <core:Item text="Registered" key="REGISTERED"/>
                                        <core:Item text="In Review" key="INREVIEW"/>
                                        <core:Item text="Resolved" key="RESOLVED"/>
                                        <core:Item text="Withdrawn" key="WITHDRAWN"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="StartDate" label="{i18n>StartDate}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <DatePicker placeholder="DD/MM/YYYY"  value="{path:'oModelControl>/filterBar/StartDate', type:'sap.ui.model.type.Date', formatOptions: {pattern:'dd/MM/yyyy', UTC:false } }" displayFormat="dd/MM/yyyy"></DatePicker>
                                </fb:control>
                            </fb:FilterGroupItem>
                          <fb:FilterGroupItem groupName="__$INTERNAL$" name="EndDate" label="{i18n>EndDate}" visibleInFilterBar="true">
                                <fb:control>
                                    <DatePicker placeholder="DD/MM/YYYY"  value="{path:'oModelControl>/filterBar/EndDate', type:'sap.ui.model.type.Date', formatOptions: {pattern:'dd/MM/yyyy', UTC:false } }" displayFormat="dd/MM/yyyy"></DatePicker>
                                </fb:control>
                            </fb:FilterGroupItem>
                            
                              

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="table" fixedLayout="false" growing="true" growingThreshold="10" updateFinished="onUpdateFinished" width="auto" items="{path: '/Complaints',sorter:{path:'CreatedAt',descending:true}, parameters:{expand:'DGA,Lead,ResolutionDetails,ComplaintType,ConsumersSelectedIssuesRequests/MasterComplaintSubtypesReqs' }}" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{worklistView>/worklistTableTitle}"/>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://add" text="{i18n>RaiseComplaint}" type="Emphasized" press=".onPressAdd" tooltip="{i18n>RaiseComplaint}"></Button>
                        <Button visible="false" icon="sap-icon://sort" type="Transparent" press="handleSortButtonPressed"></Button>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>DGAName}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>DGAID}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>MobileNumber}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>ComplaintID}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>CustomerName}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>CustomerMobileNo}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>LeadStage}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>ComplaintType}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>Date}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>ComplaintStatus}"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem press="onListItemPress" type="Navigation">
                        <cells>
                            <Text text="{DGA/GivenName}"/>
                            <Text text="{DGAId}"/>
                            <Text text="{DGA/Mobile}"/>
                            <Text text="{ComplaintCode}"/>
                            <Text text="{= ${IsNewConsumer} === true ? ${ConsumerName} : ${Lead/ConsumerName} }"/>
                            <Text text="{= ${IsNewConsumer} === true ? ${ConsumerMobileNo} : ${Lead/PrimaryNum} }"/>
                            <Text text="{LeadStage}"/>
                            <Text text="{ComplaintType/ComplaintType}"/>
                            <Text text="{path:'CreatedAt', type: 'sap.ui.model.type.DateTime', 
                            formatOptions: { 
                                pattern: 'dd/MM/yyyy' 
                            }}"/>
                            <ObjectStatus text="{ComplaintStatus}" state="{= ${ComplaintStatus} === 'RESOLVED' || ${ComplaintStatus} === 'WITHDRAWN'  ? 'Success' : 'Warning' }"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
