<mvc:View controllerName="com.knpl.dga.complains.controller.AddComplaint" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:uxap="sap.uxap" height="100%">
    <Page busy="{oViewModel>/busy}" busyIndicatorDelay="0" showNavButton="false" showHeader="true" navButtonPress="navPressBack" floatingFooter="true">
        <headerContent>
            <Bar>
                <contentLeft>
                    <Breadcrumbs currentLocationText="{i18n>RaiseComplaint}">
                        <Link text="{i18n>worklistTitle}" press="navPressBack"/>
                    </Breadcrumbs>
                </contentLeft>
            </Bar>
        </headerContent>
        <content>

            <VBox width="100%" id="oVbxSmtTbl"></VBox>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                 <Button width="7%" text="{i18n>btnSubmit}" type="Emphasized" press="onPressSave"/>
                <Button width="7%" text="{i18n>Cancel}" type="Ghost" press="navPressBack"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
