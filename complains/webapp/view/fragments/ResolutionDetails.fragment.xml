<core:FragmentDefinition xmlns="sap.m" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
    <f:SimpleForm editable="true" layout="ColumnLayout" class="sapUiMediumMarginBeginEnd"
    labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" 
    emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2"
    singleContainerFullSize="false" title="{i18n>ResolutionDetails}">
        <f:content>
            <Label text="{i18n>ResolutionType}" />
            <Text text="{= ${ResolutionDetails/Resolution} === null ? 'NA' : ${ResolutionDetails/Resolution} }" />
            <Label text="{i18n>Description}" />
            <Text text="{= ${Remark} === null ? 'NA' : ${Remark} }" />
            <Label text="{i18n>ResolutionDate}" />
            <Text text="{= ${ResolutionDetails/CreatedAt} === null ? 'NA' : ${path:'ResolutionDetails/CreatedAt', type: 'sap.ui.model.type.DateTime', 
                            formatOptions: { 
                                pattern: 'dd/MM/yyyy hh:mm aaa' 
                            }} }" />
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
