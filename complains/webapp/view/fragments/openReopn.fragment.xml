        <Dialog  contentHeight="30%" stretch="false" class="sapUiContentPadding" title="{i18n>ReopenReason}" >
        <content>
            <form:SimpleForm  layout="ResponsiveGridLayout"	
           	singleContainerFullSize="false">
               <ComboBox id="idcombo"  required="true"  value="{oModelControl>/ComplainReopenDialoge/ComplainReopenReason}"
                    selectedKey="{oModelControl>/ComplainReopenDialoge/ComplainReopenReasonId}"
				items="{path:'/MasterComplainReopenReasonSet'}"> 
				<core:Item 
                key="{Id}"
                text="{Reason}" />
			</ComboBox>
                	<!-- <ComboBox id="idcombo"  required="true"
                    selectedKey="{oModelControl>/ComplainReopenReasonId}"
				items="{path:'/MasterComplainReopenReasonSet'}">
				<core:Item 
                key="{Id}-{Reason}"
                text="{Reason}" />
			</ComboBox> -->
            </form:SimpleForm>
        </content>
<beginButton>
  <Button text="{i18n>Close}" press="onReopenClose" />
</beginButton>
        <endButton>
            <Button text="{i18n>Save}" press="onReopenSave" type="Emphasized" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>