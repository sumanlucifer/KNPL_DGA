<core:FragmentDefinition xmlns="sap.m" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
    <f:SimpleForm editable="true" layout="ColumnLayout" class="sapUiMediumMarginBeginEnd"
    labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" 
    emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" 
    singleContainerFullSize="false" title="{i18n>ComplaintDetails}">
        <f:content>
            <Label text="{i18n>DGAName}" />
            <Text text="{DGA/GivenName}" />
            <Label text="{i18n>MobileNo}" />
            <Text text="{DGA/Mobile}" />
            <Label text="{i18n>ComplaintType}" />
            <Text text="{ComplaintType/ComplaintType}" />
            <Label text="{i18n>Comments}" />
            <Text text="{Comments}" />
            <Label text="{i18n>DGAID}" />
            <Text text="{DGAId}" />
            <Label text="{i18n>LeadStage}" />
            <Text text="{LeadStage}" />
        </f:content>
    </f:SimpleForm>
    <f:SimpleForm editable="true" layout="ResponsiveGridLayout" class="sapUiMediumMarginBeginEnd"
    labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" 
    emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" 
    singleContainerFullSize="false">
        <f:content>
            <Label text="{i18n>Issue}" />
            <VBox items="{ConsumersSelectedIssuesRequests}">
                <items>
                    <Text text="* {MasterComplaintSubtypesReqs/ComplaintSubtype}" />
                </items>
            </VBox>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
