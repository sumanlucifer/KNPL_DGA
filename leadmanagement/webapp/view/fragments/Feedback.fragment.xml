    <f:GridList
			id="FeedbackDataForm"
			items="{/ConsumerFeedbackAnswers}">
			<f:customLayout>
				<grid:GridBoxLayout boxMinWidth="17rem"/>
			</f:customLayout>

			<f:GridListItem>
				<VBox class="sapUiSmallMargin">
					<layoutData>
						<FlexItemData growFactor="1" shrinkFactor="0" />
					</layoutData>
					<Title text="{Question/Question}" wrapping="true" />
					<Label text="{Answer/Answer}" wrapping="true" />
				</VBox>
			</f:GridListItem>
		</f:GridList>
    </items>
</VBox>
