<core:FragmentDefinition xmlns="sap.m" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core">
    <smartTable:SmartTable
                           id="idMaterialsReqTable4"
                            editable="false"
                            width="100%"
                            entitySet="MaterialRequisitionProducts"
                            beforeRebindTable="onBeforeBindMatReqTbl4"
                            tableType="ResponsiveTable"
                            showRowCount="true"
                            useExportToExcel="false"
                            useVariantManagement="false"
                            useTablePersonalisation="true"
                            demandPopin="true"
                            enableAutoBinding="false"
                            placeToolbarInTable="true"
                            persistencyKey="HistoryPersistenceKey"
                            initialNoDataText="{i18n>tableNoDataText}"
                            header="{i18n>ConstructionChemical}">

        <Table growing="true" growingThreshold="10" growingScrollToLoad="false" noDataText="{i18n>tableNoDataText}">
            <columns>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Product/ProductName", "leadingProperty": "Product/ProductName", "sortProperty": "Product/ProductName", "filterProperty": "Product/ProductName", "columnIndex": 0 }'/>
                    </customData>
                    <Text text="{i18n>ProductName}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ProductShade/Name", "leadingProperty": "ProductShade/Name", "sortProperty": "ProductShade/Name", "filterProperty": "ProductShade/Name", "columnIndex": 1 }'/>
                    </customData>
                    <Text text="{i18n>ProductShade}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Volume", "leadingProperty": "Volume", "sortProperty": "Volume", "filterProperty": "Volume", "columnIndex": 2 }'/>
                    </customData>
                    <Text text="{i18n>Volume}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>                  
                       <Text text="{Product/ProductName}"/>
                       <Text text="{ProductShade/Name}"/>
                       <Text text="{Volume}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>
