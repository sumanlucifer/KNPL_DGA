<core:FragmentDefinition xmlns="sap.m" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core">
    <smartTable:SmartTable
                           id="idMaterialsReqTable2"
                            editable="false"
                            width="100%"
                            entitySet="MaterialRequisitionProducts"
                            beforeRebindTable="onBeforeBindMatReqTbl2"
                            tableType="ResponsiveTable"
                            showRowCount="true"
                            useExportToExcel="false"
                            useVariantManagement="false"
                            useTablePersonalisation="false"
                            demandPopin="true"
                            enableAutoBinding="false"
                            placeToolbarInTable="true"
                            persistencyKey="HistoryPersistenceKey"
                            initialNoDataText="{i18n>tableNoDataText}"
                            header="{i18n>Exterior}">

        <Table growing="true" growingThreshold="10" growingScrollToLoad="false" noDataText="{i18n>tableNoDataText}">
            <columns>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Product/ProductName", "leadingProperty": "Product/ProductName", "sortProperty": "Product/ProductName", "filterProperty": "Product/ProductName", "columnIndex": 0 }'/>
                    </customData>
                    <Text text="{i18n>ProductName}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Product/ProductClassification", "leadingProperty": "Product/ProductClassification", "columnIndex": 1 }'/>
                    </customData>
                    <Text text="{i18n>ClassName}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ProductShade/ShadeName", "leadingProperty": "ProductShade/ShadeName", "sortProperty": "ProductShade/ShadeName", "filterProperty": "ProductShade/ShadeName", "columnIndex": 2 }'/>
                    </customData>
                    <Text text="{i18n>ProductShade}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Volume", "leadingProperty": "Volume", "sortProperty": "Volume", "filterProperty": "Volume", "columnIndex": 3 }'/>
                    </customData>
                    <Text text="{i18n>Volume}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>                  
                       <Text text="{Product/ProductName}"/>      
                       <VBox items="{
                           path: 'Product/ProductClassification'
                           }">
                           <Text text="{ClassificationName}"/>
                        </VBox>     
                        <Text text="{= ${ProductShade/ShadeCode} ? ${ProductShade/ShadeCode} + '-' + ${ProductShade/ShadeName} : '--' }"/>
                       <Text text="{Volume}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>
