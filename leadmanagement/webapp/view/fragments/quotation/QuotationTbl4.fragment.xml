<core:FragmentDefinition xmlns="sap.m" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core">
    <smartTable:SmartTable
                           id="QuotationTbl4"
                            editable="false"
                            width="100%"
                            entitySet="QuotationAreas"
                            beforeRebindTable="onBeforeRebindQuotReq4"
                            tableType="ResponsiveTable"
                            showRowCount="true"
                            useExportToExcel="false"
                            useVariantManagement="false"
                            useTablePersonalisation="false"
                            demandPopin="true"
                            enableAutoBinding="false"
                            placeToolbarInTable="true"
                            persistencyKey="HistoryPersistenceKey"
                            initialNoDataText="{i18n>tableNoDataText}"
                            header="{i18n>ConstructionChemical}" >

        <Table growing="true" growingThreshold="10" growingScrollToLoad="false" noDataText="{i18n>tableNoDataText}">
            <columns>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Type", "leadingProperty": "Type", "sortProperty": "Type", "filterProperty": "Type", "columnIndex": 0 }'/>
                    </customData>
                    <Text text="{i18n>Type}"/>
                    <footer>
                        <Text id="idLblTotalQuotCC" text="{= ${TotalConstructionChemicalCosting} ? ${i18n>TotalConstructionChemicalCosting} : '' }"/>
                    </footer>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ClassType", "leadingProperty": "ClassType", "sortProperty": "ClassType", "filterProperty": "ClassType", "columnIndex": 1 }'/>
                    </customData>
                    <Text text="{i18n>Class}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "SystemType", "leadingProperty": "SystemType", "sortProperty": "SystemType", "filterProperty": "SystemType", "columnIndex": 3 }'/>
                    </customData>
                    <Text text="{i18n>System}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "VAType", "leadingProperty": "VAType", "sortProperty": "VAType", "filterProperty": "VAType", "columnIndex": 4 }'/>
                    </customData>
                    <Text text="{i18n>ValueAddition}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "RatePerSqFt", "leadingProperty": "RatePerSqFt", "sortProperty": "RatePerSqFt", "filterProperty": "RatePerSqFt", "columnIndex": 5 }'/>
                    </customData>
                    <Text text="{i18n>Rate}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Area", "leadingProperty": "Area", "sortProperty": "Area", "filterProperty": "Area", "columnIndex": 6 }'/>
                    </customData>
                    <Text text="{i18n>AreaSqft}"/>
                </Column>
                <Column hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "RateAccToArea", "leadingProperty": "RateAccToArea", "sortProperty": "RateAccToArea", "filterProperty": "RateAccToArea", "columnIndex": 7 }'/>
                    </customData>
                    <Text text="{i18n>RateAccToArea}"/>
                    <footer>
                        <Text id="idTotalQuotCC" text="{= ${TotalConstructionChemicalCosting} ? ${i18n>Rupee} + '' + ${TotalConstructionChemicalCosting} : '' }"/>
                    </footer>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>                  
                       <Text text="{Type}"/>
                       <Text text="{ClassType}"/>
                       <Text text="{SystemType}"/>
                       <Text text="{VAType}"/>
                       <Text text="{i18n>Rupee} {RatePerSqFt}"/>
                       <Text text="{Area}"/>
                       <Text text="{i18n>Rupee} {RateAccToArea}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>
