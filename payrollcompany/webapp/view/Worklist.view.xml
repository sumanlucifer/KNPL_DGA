<mvc:View height="100%" xmlns:smartTable="sap.ui.comp.smarttable" controllerName="com.knpl.dga.payrollcompany.controller.Worklist" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <f:DynamicPage busyIndicatorDelay="0" busy="{oModelControl>/PageBusy}" id="dynamicPageId" headerExpanded="true">
    
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbar" reset="onResetFilterBar" search="onFilterBarSearch" useToolbar="false" showRestoreOnFB="true">
                        
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
              <Table id="idPayrollTable" growing="true" growingThreshold="10" updateFinished="onUpdateFinished" width="auto" items="{path: '/MasterPayrollCompanies',sorter:{path:'CreatedAt',descending:true}}" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>PayrollCompanyName}" id="idPayrollTableTitle" class="PayrollTableTitleClass"/>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://add" text="{i18n>Add} {i18n>MainObject}" type="Emphasized" press=".onPressAddObject" tooltip="{i18n>Add} {i18n>MainObject}"></Button>
                        <!-- <Button visible="false" icon="sap-icon://sort" type="Transparent" press="handleSortButtonPressed"></Button> -->
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>PayrollCompanyName}"/>
                    </Column>
                    <Column hAlign="End">
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{Name}"/>
                            <Button icon="sap-icon://edit" type="Transparent" press="onPressEditObject" tooltip="Edit"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
