<core:FragmentDefinition xmlns:unified="sap.ui.unified" xmlns:upload="sap.m.upload" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">

    <Dialog binding="{oModelControl>/QRCodeData}" class="sapUiContentPadding" title="{i18n>Edit} {i18n>MainObject}" >
        <content>
            <f:SimpleForm columnsL="2" layout="ResponsiveGridLayout" columnsM="2" singleContainerFullSize="false"  >
                <Label text="{i18n>PayrollCompanyName}" />
                <Input required="true" width="350px" id="idPayrollCompanyEdit" liveChange="onCompanyNameInput" value="{path:'oModelControl>/EditFields/Name', type : 'sap.ui.model.type.String', constraints:{ minLength:1 } }" />
                <Label text="{i18n>Zone}" />
                  <MultiComboBox  required="true" width="350px" selectedKeys="{path:'oModelControl>/EditFields/MultiCombo/Zone', type :'.customMulti' }" items="{ path : '/MasterZones' }"  selectionChange="onMultyZoneChange2" >
					<core:Item key="{Id}" text="{Id}"/>
				</MultiComboBox>
                <Label text="{i18n>Division}"/>
                <MultiComboBox required="true" width="350px" editable="{= ${oModelControl>/EditFields/MultiCombo/Zone}.length > 0 }" id="idDivisionEdit"  selectedKeys="{oModelControl>/EditFields/MultiCombo/Division}" items="{ path : '/MasterDivisions'}" selectionChange="onMultyDivisionChange" >
					<core:Item key="{Id}" text="{Id}"/>
				</MultiComboBox>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" press="onPayrollCompanyDialogSave"  type="Emphasized" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onPayrollCompanyDialogCancel" />
        </endButton>
    </Dialog>
   
</core:FragmentDefinition>