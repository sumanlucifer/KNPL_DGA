<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox width="100%">
        <Table id="IdTblCondonations" width="auto" growing="true" growingThreshold="10" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}"  noDataText="{i18n>tableNoDataText}">
            <headerToolbar>
                <Toolbar>
                    <ToolbarSpacer />
                    <!-- <SearchField width="20%" showSearchButton="true" search="onTablesSearch" value="{oModelControl2>/Search/Condonation}" /> -->
                    <Button press=".onCrossNavigate('CON')" text="{i18n>btnAddCondonation}" type="Emphasized" icon="sap-icon://add" enabled="{=!${IsArchived} &amp;&amp; ${ActivationStatus}!=='DEACTIVATED' }"/>
                </Toolbar>
            </headerToolbar>

            <columns>
             
                <Column>
                    <Text text="{i18n>colCategory}" />
                </Column>
                   <Column>
                    <Text text="{i18n>colProductName}" />
                </Column>
                 <Column>
                    <Text text="{i18n>colQuantity}" />
                </Column>
                <Column>
                    <Text text="{i18n>colRewardPoints}" />
                </Column> 
                <Column >
                    <Text text="{i18n>TotalPoints}" />
                </Column>
                 <Column>
                    <Text text="{i18n>DateAndTime}" />
                </Column>
               
            </columns>

            <dependents>
                <ColumnListItem id="TblCondoDepend" press="onListItemPress">
                    <cells>
                        <Text text="{parts : [ { path:'PainterComplainProducts' },{path: 'i18n>colCategory'} ], formatter : '.formatter.ProductProperty'  }" />
                        <Text text="{parts : [ { path:'PainterComplainProducts' },{path: 'i18n>colProductName'} ], formatter : '.formatter.ProductProperty'  }" />
                        <Text text="{parts : [ { path:'PainterComplainProducts' },{path: 'i18n>colQuantity'} ], formatter : '.formatter.ProductProperty'  }" />
                        <Text text="{parts : [ { path:'PainterComplainProducts' },{path: 'i18n>colRewardPoints'} ], formatter : '.formatter.ProductProperty'  }" />               
                        <Text text="{parts : [ { path:'PainterComplainProducts' },{path: 'i18n>TotalPoints'} ], formatter : '.formatter.ProductProperty'  }" />
                        <Text text="{path:'CreatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/YYYY h:mm a'}}" />

                    </cells>
                </ColumnListItem>
            </dependents>
        </Table>

    </VBox>
</core:FragmentDefinition>