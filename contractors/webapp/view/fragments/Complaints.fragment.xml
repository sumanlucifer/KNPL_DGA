<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox width="100%">
        <Table id="IdTblComplaints" width="auto" growing="true" growingThreshold="10" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}"  noDataText="{i18n>tableNoDataText}">
            <headerToolbar>
                <Toolbar>
                    <ToolbarSpacer />
                    <SearchField width="20%" showSearchButton="true" search="onTablesSearch" value="{oModelControl2>/Search/Complains}" />
                    <Button press=".onCrossNavigate('CM')" text="{i18n>btnAddComplaint}" type="Emphasized" icon="sap-icon://add" enabled="{=!${IsArchived} &amp;&amp; ${ActivationStatus}!=='DEACTIVATED' }" />
                </Toolbar>
            </headerToolbar>

            <columns>
                <!-- <Column>
                    <Text text="{i18n>PainterName}" />
                </Column>
                <Column>
                    <Text text="{i18n>MembershipId}" />
                </Column>
                <Column>
                    <Text text="{i18n>PrimaryMobileNo}" />
                </Column> -->
                <Column>
                    <Text text="{i18n>ComplaintId}" />
                </Column>
                <Column>
                    <Text text="{i18n>ComplaintType}" />
                </Column>
                <Column>
                    <Text text="{i18n>ComplaintDetails}" />
                </Column>
                <Column>
                    <Text text="{i18n>DateAndTime}" />
                </Column>
                <Column>
                    <Text text="{i18n>ComplaintStatus}" />
                </Column>
            </columns>

            <dependents >
                <ColumnListItem id="CompTablDepend" press="onListItemPress">
                    <cells>
                        <!-- <Text text="{Painter/Name}" />
                        <Text text="{Painter/MembershipCard}" />
                        <Text text="{Painter/Mobile}" /> -->
                        <Text text="{ComplaintCode}" />
                        <Text text="{ComplaintType/ComplaintType}" />
                        <Text text="{ComplaintSubtype/ComplaintSubtype}" />
                        <Text text="{path:'CreatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/YYYY h:mm a'}}" />
                        <ObjectStatus text="{path:'ComplaintStatus',formatter:'.fmtLowerCase'}" />
                    </cells>
                </ColumnListItem>
            </dependents>
        </Table>

    </VBox>
</core:FragmentDefinition>