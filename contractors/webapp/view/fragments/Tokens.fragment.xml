<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox width="100%">
        <Table id="idTblOffers" growing="true" growingThreshold="10" width="auto"  noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}">
            <headerToolbar>
                <Toolbar>
                    <ToolbarSpacer />
                    <!-- <SearchField width="20%" showSearchButton="true" search="onTablesSearch" value="{oModelControl2>/Search/Tokens}"></SearchField>
                    <Button icon="sap-icon://add" type="Emphasized"  text="{i18n>ApplyToken}" press="onPressOpenTokenDialog" enabled="{=!${IsArchived} &amp;&amp; ${ActivationStatus}!=='DEACTIVATED' }"></Button> -->
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="{i18n>ScanTokenNo}" />
                </Column>
                 <Column>
                    <Text text="{i18n>ProductName}" />
                </Column>
                <Column>
                    <Text text="{i18n>MobileNumber}" />
                </Column>
                <Column>
                    <Text text="{i18n>Points}" />
                </Column>
                <Column>
                    <Text text="{i18n>DateAndTime}" />
                </Column>
                 <Column>
                    <Text text="{i18n>AppliedBy}" />
                </Column>
                 <!-- <Column>
                    <Text text="{i18n>ProductCategory}" />
                </Column> -->
            </columns>
            <dependents>
                <ColumnListItem id="TblToknHistDepend" press="onListItemPress">
                    <cells>
                        <Text text="{TokenCode}" />
                        <Text text="{ProductName}" />
                        <Text text="{Painter/Mobile}" />
                        <Text text="{RewardPoints}" />
                        <Text text="{path:'CreatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/YYYY h:mm a'}}" />
                        <Text text="{path:'Channel', formatter:'.fmtLowerCase'}" />
                        <!-- <Text text="{ProductCategory}" /> -->
                    </cells>
                </ColumnListItem>
            </dependents>
        </Table>
    </VBox>
</core:FragmentDefinition>