<mvc:View xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:m="sap.m" controllerName="com.knpl.pragati.ContactPainter.controller.ProfilePainter" height="100%">
    <uxap:ObjectPageLayout busyIndicatorDelay="0" busy="{oModelControl2>/ProfilePageBuzy}" navigate="onSectionChange" enableLazyLoading="true" useIconTabBar="{oModelControl2>/iCtbar}" showFooter="{=  ${ActivationStatus} !== 'DEACTIVATED' ? true : false }" id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>UpdatePainterDetails}">
                        <Link text="{i18n>Painters}" press="onNavBack"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <m:Title class="sapUiSmallMarginBegin" text="{Name}" wrapping="true"/>
                </uxap:expandedHeading>
                <uxap:expandedContent>
                    <m:Text class="sapUiSmallMarginBegin" text="{MembershipCard}"/>
                </uxap:expandedContent>

                <uxap:snappedHeading>
                    <m:FlexBox fitContainer="true" alignItems="Center" renderType="Bare">
                        <m:Avatar fallbackIcon="sap-icon://picture" src="{oModelControl2>/ProfilePic}" class="sapUiTinyMarginEnd"/>
                        <FlexBox direction="Column" renderType="Bare">
                            <Title text="{Name}" wrapping="true"/>
                            <Text text="{MembershipCard}"/>
                        </FlexBox>
                    </m:FlexBox>
                </uxap:snappedHeading>
                <uxap:actions>
                    <Button visible="false" press="onChangeStatus" type="Emphasized" text="{i18n>btnChangeStatus}" />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>


        </uxap:headerTitle>

        <uxap:headerContent>
            <m:FlexBox wrap="Wrap" height="100%" class="sapUiSmallMarginBottom" renderType="Bare">
                <m:Avatar fallbackIcon="sap-icon://picture" src="{oModelControl2>/ProfilePic}" displaySize="L" class="sapUiTinyMarginBegin"/>

                <m:FlexBox class="sapUiSmallMarginBeginEnd" alignItems="Start" direction="Column" wrap="Wrap" renderType="Bare">
                    <m:ObjectStatus title="{i18n>ContactNumber}" text="{Mobile}"/>
                    <m:ObjectStatus title="{i18n>AgeGroup}" text="{path:'AgeGroup/AgeGroup',formatter:'.fmtAgeGrp'}"/>
                    <m:ObjectStatus title="{i18n>Category}" text="{path:'Slab/Slab'}"/>
                    <m:ObjectStatus title="{i18n>ActivationStatus}" text="{path:'ActivationStatus', formatter:'.sActivationStatus' }"/>
                    <ObjectStatus title="{i18n>Rating}" text="{= ${PainterRating} !== null ? ${PainterRating} + '/' +  ${PainterMaxRating}: null }"/>
                     <ObjectStatus title="{i18n>MobileAppInstalled}" text="{= ${IsAppInstalled} === true ? 'Yes' : 'No' }"/>

                </m:FlexBox>
                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd" width="35%">
                    <m:ObjectStatus title="{i18n>Address}" text="{parts:['PainterAddress/AddressLine1','PainterAddress/CityDetails/City','PainterAddress/StateDetails/State'], formatter:'.fmtAddress' }"/>
                    <m:ObjectStatus title="{i18n>TotalPoints}" text="{path:'TotalPoints' }"/>
                    <m:ObjectStatus title="{i18n>RedeemPoints}" text="{path:'RedeemPoints' }"/>
                    <m:ObjectStatus title="{i18n>BalancePoints}" text="{path:'RewardPoints' }"/>
                    <m:ObjectStatus title="{i18n>PortfolioAvailable}" text="{= !${DownloadPortfolioApplicable} ? 'No': 'Yes' }"/>
                </layout:VerticalLayout>


            </m:FlexBox>
        </uxap:headerContent>

        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false" title="Profile" id="profile">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox id="idVbProfile" renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.Profile" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>BankingDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox id="idVbBanking" renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.Banking" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>KycDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox id="idVbKyc" renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.Kyc" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <!-- <uxap:ObjectPageSection titleUppercase="false" title="{i18n>Referral}" id="referral">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.Referral" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection> !-->
            <uxap:ObjectPageSection id="tokenSection" titleUppercase="false" title="{i18n>Tokens}" >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.Tokens" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <!--<uxap:ObjectPageSection id="learnSection" titleUppercase="false" title="{i18n>MyLearning}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>LiveTraining}">

                        <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.TrainingLive" type="XML"/>

                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection title="{i18n>OfflineTraining}">
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.TrainingOffline" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection title="{i18n>VideoTraining}">
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.TrainingVideo" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection id="loyaltysection" titleUppercase="false" title="{i18n>Rewards}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.LoyaltyPoints" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>Complaints}" id="complainSection">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.Complaints" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>TtlCondonation}" id="condomationSection">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.Condonations" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection id="callbacksection" titleUppercase="false" title="{i18n>CallbackRequest}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.CallbackRequests" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection> !-->
            <uxap:ObjectPageSection id="offerssection" titleUppercase="false" title="{i18n>Offers}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.Offers" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <!-- <uxap:ObjectPageSection id="additionalrequest" titleUppercase="false" title="{i18n>additionalrequest}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <VBox renderType="Bare">
                            <core:Fragment fragmentName="com.knpl.pragati.ContactPainter.view.fragments.AdditionalRequest" type="XML"/>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection> -->
        </uxap:sections>
        <uxap:footer>
            <Bar visible="{= ${IsArchived} === false}">
                <contentRight>
                    <!-- <Button text="{i18n>UpdateName}" type="Emphasized" press="onUpdatedName"/> -->
                    <!-- <Button id="edit"  tooltip="{i18n>Edit}" text="{i18n>Edit}" type="Emphasized" enabled="true" press="handleEditPress"/>
                    <Button id="cancel" tooltip="{i18n>Cancel}" text="{i18n>Cancel}" type="Ghost" visible="false" press="handleCancelPress"/>
                    <Button id="save" tooltip="{i18n>Save}" text="{i18n>Save}" type="Emphasized" visible="false"/> -->
                     
                </contentRight>
            </Bar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
