<mvc:View xmlns:vbm="sap.ui.vbm" height="100%" controllerName="com.knpl.dga.performancetarget.controller.AddObject" xmlns:form="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <f:DynamicPage busy="{oModelDisplay>/PageBusy}" busyIndicatorDelay="0"	stickySubheaderProvider="iconTabBar"
			class="sapUiNoContentPadding" showFooter="true" id="dynamicPageId" headerExpanded="true">
        <f:title>
             <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>SetTarget}" class="sapUiSmallMarginTopBottom"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="{i18n>New} {i18n>Lead}">
                        <Link text="{i18n>MainObject2}" press="onNavToHome"/>
                         <Link text="{i18n>MainObject}" press="onNavToHome"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
              
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
           
        </f:header>

        <f:content>
        
        <form:SimpleForm class="addForm sapUiMediumMarginBeginEnd" id="idSampleSetTarget" title="Set Target"  editable="true" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
            <form:content>
              <VBox>
                    <Label text="{i18n>Select} {i18n>DGAType}" required="true" class= "sapUiTinyMarginTopBottom" />
               	     <RadioButtonGroup columns="2" select="onRbChnageMain" selectedIndex="{oModelControl>/Rbtn/TarGrp}">
                            <buttons>
                                <RadioButton text="{i18n>DedicatedDGA}" selected="true"/>
                                <RadioButton text="{i18n>SharedDGA}"/>
                            </buttons>
                     </RadioButtonGroup>
               
                   <VBox class="sapUiTinyMargin">
                    <HBox width="100%">
                    <VBox>
                    <Label text="{i18n>Select} {i18n>Zone}" required="true" width="14em" />
                   <!-- <ComboBox class="sapUiTinyMarginEnd" width="10rem" id="idZone" placeholder="{i18n>Enter} {i18n>Zone}" selectionChange="onZoneChange"  items="{/MasterZoneSet}" selectedKey="{path:'oModelControl>/filterBar/ZoneId' }">
                         <core:Item text="{Id} " key="{Id}" />
                    </ComboBox> -->
                      <MultiComboBox class="sapUiTinyMarginEnd" required="true" width="10rem" selectedKeys="{path:'oModelControl>/MultiCombo/Zone', type :'.customMulti' }" items="{ path : '/MasterZoneSet' }"  selectionChange="onMultyZoneChange" >
					<core:Item key="{Id}" text="{Id}"/>
				     </MultiComboBox>
                    </VBox>
                           
                     <VBox>
                         <Label text="{i18n>Select} {i18n>Divison}" required="true" width="14em" />
                      <!-- <ComboBox class="sapUiTinyMarginEnd" width="10rem" enabled="{= ${oModelControl>/filterBar/ZoneId}.length>1}" placeholder="{i18n>Enter} {i18n>Division}" id="idDivision" selectionChange="onDivisionChange" items="{/MasterDivisionSet}" selectedKey="{path:'oModelControl>/filterBar/DivisionId'}">
                        <core:Item text="{Id}" key="{Id}" />
                      </ComboBox> -->
                       <MultiComboBox  editable="{= ${oModelControl>/MultiCombo/Zone}.length > 0 }" id="idDivision" width="10rem" selectedKeys="{oModelControl>/MultiCombo/Division}" items="{ path : '/MasterDivisionSet'}" selectionChange="onMultyDivisionChange" >
					<core:Item key="{Id}" text="{Id}"/>
				</MultiComboBox>
                     </VBox>
                     <VBox>
                  <Label text="{i18n>Select} {i18n>Depot}" required="true" width="14em" />
                          <!-- <ComboBox class="sapUiTinyMarginEnd" width="10rem" enabled="{= ${oModelControl>/filterBar/DivisionId}.length>1}" id="idDepot" placeholder="{i18n>Enter} {i18n>Depot}" selectionChange="onDepotChange"  items="{/MasterDepotSet}" selectedKey="{path:'oModelControl>/filterBar/DepotId' }">
                                        <core:Item text="{Depot} ( {Id} )" key="{Id}" />
                           </ComboBox> -->
                            <MultiInput width="10rem" editable="{= ${oModelControl>/MultiCombo/Division}.length > 0 }" id="multiInputDepotAdd" tokens="{oModelControl>/MultiCombo/Depot}" valueHelpRequest="onValueHelpRequestedDepot">
	                <tokens>
                        <Token editable="false" text="{oModelControl>DepotId}" key="{oModelControl>DepotId}"/>
                    </tokens>
	            </MultiInput>

                     </VBox>
                    </HBox>
                     </VBox>
                    <HBox>
                      <VBox class="sapUiTinyMargin">
                         <Label text="{i18n>From}" required="true" class="" width="14em" />
                        <DatePicker placeholder="DD/MM/YYYY" value="{path:'oModelControl>/AddFields/StartDate', type:'sap.ui.model.type.Date', formatOptions: {pattern:'dd/MM/yyyy', UTC:false } }" displayFormat="dd/MM/yyyy"></DatePicker>
           
                      </VBox>
                  
                       <VBox class="sapUiTinyMargin">
                         <Label text="{i18n>To}" required="true" class="" width="14em" />
                          <DatePicker placeholder="DD/MM/YYYY" value="{path:'oModelControl>/AddFields/EndDate', type:'sap.ui.model.type.Date', formatOptions: {pattern:'dd/MM/yyyy', UTC:false } }" displayFormat="dd/MM/yyyy"></DatePicker> 
                      </VBox>
                        </HBox>
                      <VBox class="sapUiTinyMargin">
                      <Label text="{i18n>LeadVisitCount} ({i18n>Daily})" required="true" />
                      <StepInput value="{oModelControl>/AddFields/Target}" displayValuePrecision="0"  min="0" max="20" width="14em" enabled="true" editable="true" change="onChange"/>
                      </VBox>
                </VBox>
            </form:content>
        </form:SimpleForm>
        
        </f:content>

       <!--  -->
        <f:footer>
         
           <Toolbar>
                <ToolbarSpacer/>
                <Button width="7%" text="{i18n>Cancel}" type="Ghost" press="onNavToHome"/>
                <Button width="7%" text="{i18n>Save}" type="Emphasized" press="onPressSave"/>
            </Toolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
