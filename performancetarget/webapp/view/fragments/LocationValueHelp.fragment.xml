<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">
    <ValueHelpDialog
        title="Location"
        ok=".onValueHelpOkPress1"
        cancel=".onValueHelpCancelPress1"
        afterClose=".onValueHelpAfterClose1"
        afterOpen=".onValueHelpAfterOpen1"
        supportRanges="false"
        key="TownId"
        descriptionKey="Location">
        <filterBar>
            <fb:FilterBar advancedMode="false" search="onFilterBarSearch1" showRestoreButton="true" showRestoreOnFB="true" reset="onClearLocationSearch">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="TownName"
                        label="Location Name"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="TownName" placeholder="{i18n>enterLocation}" value="{LocationFilter>/TownName}"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <!-- <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Divison"
                        label="Divison"
                        visibleInFilterBar="true">
                        <fb:control>
                            <m:Input name="Depot" placeholder="{i18n>enterDepot}" value="{DepotFilter>/Depot}"/>
                        </fb:control>
                    </fb:FilterGroupItem> -->
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>


