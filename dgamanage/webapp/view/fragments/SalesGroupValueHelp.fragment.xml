<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
		<SelectDialog
		title="{i18n>SalesGroup}"
        growing="true"
        growingThreshold="8"
        rememberSelections="false"
		class="sapUiPopupWithPadding"
		items="{path:'/MasterSaleGroups',sorter:{path:'Name'},parameters:{select:'Id,Name'} }"
	    search="_handlePValueHelpSearch"
		confirm="_handleSalesGroupConfirm"
        cancel="_onDialogClose"
		multiSelect="false">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
            title="{Name}"
			 />
	</SelectDialog>
</core:FragmentDefinition>
