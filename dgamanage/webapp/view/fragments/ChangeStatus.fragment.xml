<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog class="sapUiContentPadding" id="ChangeStatus" title="{i18n>ChangeStatus}" titleAlignment="Center" binding="{oModelDisplay>/ChangeStatus}">
        <content>
            <f:SimpleForm layout="ResponsiveGridLayout" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label required="true" text="{i18n>ChangeStatus}" />
                    <ComboBox  items="{oModelDisplay>aApplicableStatus}" selectedKey="{oModelDisplay>oPayload/ActivationStatus}">
                        <core:Item key="{oModelDisplay>key}" text="{path: 'oModelDisplay>key', formatter:'.formatter.fmtLowerCase'}" />
                    </ComboBox>
                    <Label required="true" text="{i18n>Reason}" />
                    <TextArea value="{oModelDisplay>oPayload/ActivationStatusChangeReason}" />
                </f:content>
            </f:SimpleForm>



        </content>
        <buttons>
            <Button text="{i18n>Close}" press="._onDialogClose" />
            <Button press="onConfirmStatus" type="Emphasized" text="{i18n>Save}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>