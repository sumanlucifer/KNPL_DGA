<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog class="sapUiContentPadding" id="ChangeStatus" title="{i18n>ChangeStatus}" titleAlignment="Center" binding="{oModelDisplay>/ChangeStatus}">
        <content>
            <f:SimpleForm layout="ResponsiveGridLayout" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label required="true" text="{i18n>ChangeStatus}" />
                    <ComboBox items="{oModelControl2>aApplicableStatus}" selectedKey="{oModelControl2>oPayload/ActivationStatus}">
                        <core:Item key="{oModelControl2>key}" text="{path: 'oModelControl2>key', formatter:'.formatter.sActivationStatus'}" />
                    </ComboBox>
                    <Label required="true" text="{i18n>Reason}" />
                    <TextArea value="{oModelControl2>oPayload/ActivationStatusChangeReason}" />
                </f:content>
            </f:SimpleForm>



        </content>
        <buttons>
            <Button text="{i18n>Close}" press=".onDialogClose" />
            <Button press="onConfirmStatus" type="Emphasized" text="{i18n>Save}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>