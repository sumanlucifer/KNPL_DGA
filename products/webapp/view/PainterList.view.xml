                                    </Column>
                                     <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "DGAs/DivisionId","type":"string", "leadingProperty": "DGAs/DivisionId", "columnIndex": 5 }'/>
                                        </customData>
                                          <Text text="{i18n>division}"/>
                                    </Column>
                                    <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "DGAs/DepotId","type":"string", "leadingProperty": "DGAs/DepotId", "columnIndex": 6 }'/>
                                        </customData>
                                          <Text text="{i18n>depot}"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem  press="onPress">
                                        <cells>
                                            <Text text="{path:'DGAs/GivenName'}"/>
                                               <Text text="{path:'DGAs/Id'}"/>
                                                  <Text text="{path:'DGAPositionCode'}"/>
                                                     <Text text="{path:'DGAs/Mobile'}"/>
                                                        <Text text="{path:'DGAs/Zone'}"/>
                                                           <Text text="{path:'DGAs/DivisionId'}"/>
                                                              <Text text="{path:'DGAs/DepotId'}"/>
                                        </cells>      
                                    </ColumnListItem>
                                </items> 
                            </Table> 
