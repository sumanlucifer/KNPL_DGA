<mvc:View
	controllerName="com.knpl.dga.products.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
     xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:semantic="sap.f.semantic"
    xmlns:smartTable="sap.ui.comp.smarttable">
<f:DynamicPage headerExpanded="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Catalogues"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbar" reset="onResetFilters" search="onSearch" useToolbar="false" showGoOnFB="true" showRestoreOnFB="true"> 
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Search" label="Search" visibleInFilterBar="true" class="searchFieldLabelHidden">
                               <fb:control>
                                    <SearchField id="idSearchInput" data:filterName="Search" value="{ViewModel>/filterBar/search}"
                                     placeholder="{i18n>searchFilterPlaceholder}" showSearchButton="false" />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Creation Date" label="Creation Date" visibleInFilterBar="true" class="searchFieldLabelHidden">
                               <fb:control>
                                    <DatePicker id="idCreationDateInput" data:filterName="Creation Date" value="{ViewModel>/filterBar/createdAt}" valueFormat="yyyy-MM-dd" displayFormat="dd/MM/yyyy" placeholder="{i18n>creationDateFilterPlaceholder}"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Title" label="Title" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                 <fb:control>
                                    <Input id="idTitleInput" data:filterName="Title" value="{ViewModel>/filterBar/title}" placeholder="{i18n>titleFilterPlaceholder}" />
                                </fb:control>
                            </fb:FilterGroupItem>
                             <fb:FilterGroupItem groupName="__$INTERNAL$" name="Category" label="Category" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                 <fb:control>
                                    <ComboBox
                                    id="idCategory" 
                                    data:filterName="Category"
                                    value="{ViewModel>/filterBar/category}"
                                        items="{
                                            path: '/MasterProductCategories',
                                            sorter: { path: 'CategoryName' }
                                        }">
                                        <core:Item key="{Id}" text="{CategoryName}" />
                                    </ComboBox>
                                    <!-- <Input id="idCategory" data:filterName="Category" value="{ViewModel>/filterBar/category}" placeholder="{i18n>categoryFilterPlaceholder}" /> -->
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Classification" label="Classification" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                 <fb:control>
                                    <ComboBox
                                    id="idClassification" 
                                    data:filterName="Classification"
                                    value="{ViewModel>/filterBar/classification}"
                                        items="{
                                            path: '/MasterProductClassifications',
                                            sorter: { path: 'ClassificationName' }
                                        }">
                                        <core:Item key="{Id}" text="{ClassificationName}" />
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
         <f:content>
        <smartTable:SmartTable
                            id="idCatlogueTable"
                            editable="false"
                            header="{i18n>worklistTableTitle}"
                            beforeRebindTable="fnrebindTable"                    
                            entitySet="ProductCatalogues"
                            tableType="ResponsiveTable"
                            showRowCount="true"
                            useExportToExcel="false"
                            useVariantManagement="false"
                            useTablePersonalisation="true"
                            ignoredFields="Status,UpdatedAt,UpdatedBy,ProductCategoryId,ProductClassificationId,ProductRangeId,Description,CreatedBy,IsArchived,IsSelected,Id"
                            demandPopin="true"
                            enableAutoBinding="true"
                            placeToolbarInTable="true"
                            requestAtLeastFields="Id,Status,PdfViewerCount,PdfDownloadCount,TotalPdfViewerCount,TotalPdfDownloadCount"
                            persistencyKey="CatalogueSmartTableKey"
                            >
                            	<smartTable:customToolbar>
			<OverflowToolbar>
                        <ToolbarSpacer />
                        <Button icon="sap-icon://add" type="Emphasized" text="Add Catalogue" press="onPressAdd" enabled="{= (${appView>/loggedUserRoleId} !== 2) }"/>
                    </OverflowToolbar>
		</smartTable:customToolbar>
                        <Table growingScrollToLoad="false" growing="true" growingThreshold="20" >
                                <columns>
                                 <Column hAlign="Begin" width="15%">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "ProductDetails/ProductName","type":"string", "leadingProperty": "ProductDetails/ProductName", "columnIndex": 0 }'/>
                                        </customData>
                                          <Text text="{i18n>name}"/>
                                    </Column>
                                 <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "PdfViewerCount","type":"string", "leadingProperty": "PdfViewerCount", "columnIndex": 1 }'/>
                                        </customData>
                                          <Text text="{i18n>views}"/>
                                    </Column>
                                     <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "PdfDownloadCount","type":"string", "leadingProperty": "PdfDownloadCount", "columnIndex": 2 }'/>
                                        </customData>
                                          <Text text="{i18n>downloads}" />
                                    </Column>
                                <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "TotalPdfViewerCount","type":"string", "leadingProperty": "TotalPdfViewerCount", "columnIndex": 3 }'/>
                                        </customData>
                                          <Text text="{i18n>totalViews}"/>
                                    </Column>
                                     <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "ProductCategory/CategoryName","type":"string", "leadingProperty": "ProductCategory/CategoryName", "columnIndex": 4 }'/>
                                        </customData>
                                          <Text text="{i18n>category}"/>
                                    </Column>
                                     <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "ProductClassification/ClassificationName","type":"string", "leadingProperty": "ProductClassification/ClassificationName", "columnIndex": 5 }'/>
                                        </customData>
                                          <Text text="{i18n>classification}"/>
                                    </Column>
                                    <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "TotalPdfDownloadCount","type":"string", "leadingProperty": "TotalPdfDownloadCount", "columnIndex": 6 }'/>
                                        </customData>
                                          <Text text="{i18n>totalDownloads}"/>
                                    </Column>
                                   <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "CreatedAt", "type":"date", "leadingProperty": "CreatedAt", "columnIndex": 7 ,"sortProperty": "CreatedAt","filterProperty": "CreatedAt"}'/>
                                        </customData>
                                          <Text text="{i18n>date}"/>
                                    </Column>
                                    <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{ "columnIndex": 8,"columnKey":"actionStatus" }'/>
                                        </customData>
                                         <Text text="{i18n>status}"/>
                                    </Column>
                                    <Column hAlign="Begin" width="5%">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{ "columnIndex": 9,"columnKey":"edit" }'/>
                                        </customData>
                                         <Text text="{i18n>GenericAction}"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem  type="Navigation" press="onPress">
                                        <cells>
                                            <Text text="{path:'ProductDetails/ProductName'}"/>
                                            <FlexBox >
                                            <Text text="{path:'PdfViewerCount'}" visible="{= (${PdfViewerCount} === 0) }"/>
                                            <Link
                                            visible="{= (${PdfViewerCount} !== 0) }"
                                                text="{path:'PdfViewerCount'}"
                                                press="onViewsPress"/>
                                            </FlexBox>
                                            <Text text="{path:'PdfDownloadCount'}"/>
                                            <Text text="{path:'TotalPdfViewerCount'}"/>
                                            <Text text="{path:'ProductCategory/CategoryName'}"/>
                                             <Text text="{path:'ProductClassification/ClassificationName'}"/>
                                              <Text text="{path:'TotalPdfDownloadCount'}"/>
                                            
                                            <Text text="{path:'CreatedAt',formatter:'.formatter.dateFormatter2'}"/>
                                            <ObjectStatus text="{path: 'Status',
                                                formatter: '.formatter.statusList'}" 
                                                data:remarks="{Status}"
                                                state="{= ${Status} === true? 'Success' : undefined || ${Status} === false? 'Warning' : undefined }"/>
                                            <Button  icon="sap-icon://edit" type="Transparent" press="onPressEdit" tooltip="Edit" enabled="{= (${appView>/loggedUserRoleId} !== 2) }"/>
                                       
                                        </cells>      
                                    </ColumnListItem>
                                </items> 
                            </Table> 
                        </smartTable:SmartTable>
 </f:content>
    </f:DynamicPage>
</mvc:View>
