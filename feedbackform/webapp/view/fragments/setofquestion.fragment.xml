<core:FragmentDefinition xmlns="sap.m" 	xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
   <Table id="table" width="auto"
				noDataText="{i18n>tableNoDataText}" busyIndicatorDelay="0" growing="true" growingScrollToLoad="false" growingThreshold="10"
				updateFinished=".onUpdateFinished">
				<headerToolbar>
					<OverflowToolbar>
						<Title id="tableHeader" text="{oModelControl>/Table1Count}" level="H3"/>
						<ToolbarSpacer/>
                   <SearchField width="20%"/>
						<Button text="{i18n>btnAdd}" type="Emphasized" icon="sap-icon://add" press="onAdd">
						</Button>
                         <Button id="idMasterButtonSort1" icon="sap-icon://sort" press="onSort"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>SrnO}"/>
					</Column>
					<Column>
						<Text text="{i18n>Question}"/>
					</Column>
						<Column>
						<Text text="{i18n>Actions}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{GroupName}"/>
							<Text text="{TotalMembers}"/>
                            <FlexBox >
                            	<Button icon= "sap-icon://detail-view" press="onPressEdit" type="Transparent" tooltip="View"/>
							<Button icon="sap-icon://cause"  press="onPressEdit" type="Transparent" tooltip="Archive"/>
                            <Button  icon="sap-icon://delete" press="onDelete" type="Transparent" tooltip="Delete"/>
                            </FlexBox>
                        </cells>
					</ColumnListItem>
				</items>
			</Table>
</core:FragmentDefinition>
