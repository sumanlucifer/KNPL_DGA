<core:FragmentDefinition xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f">
    <form:SimpleForm editable="true" layout="ColumnLayout" title="{oModelControl>/Pagetitle} {i18n>Form}" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
        <form:content>
            <Label text="{i18n>FormName}" required="true"></Label>
            <Input id="idCreateFormNameINP" maxLength="100"/>
            <Label text="{i18n>FormType}" required="true"></Label>
            <ComboBox id="idCreateFormTypeCMB" placeholder="{i18n>SelectFormType}" items="{/MasterFormTypes}" selectionChange="onFormTypeSelectionChange">
                <core:ListItem key="{Id}" text="{TypeText}"/>
            </ComboBox>
        </form:content>
    </form:SimpleForm>
    <Table id="idCreateFMQuestionsTBL" mode="MultiSelect" noDataText="{i18n>tableNoDataText}" items="{path:'/Questions', sorter: {path: 'UpdatedAt', descending: true}, filters: [{path: 'IsArchived', operator: 'EQ', value1: false}]}" busyIndicatorDelay="0" growing="true" growingScrollToLoad="false" growingThreshold="10" updateFinished="onQuestionFormListUpdated">
        <headerToolbar>
            <OverflowToolbar>
                <Title/>
                <ToolbarSpacer/>
                <SearchField search="onQuestionFormsSearch" width="20%"/>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>Questions}"/>
            </Column>
            <Column hAlign="End">
                <Text text="{i18n>Action}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{Question}"/>
                    <Button icon= "sap-icon://detail-view" press="onViewQuestionDetailsPress" type="Transparent" tooltip="View"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>