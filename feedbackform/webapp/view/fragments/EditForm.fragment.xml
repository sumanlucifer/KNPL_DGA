<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <f:SimpleForm editable="true" layout="ColumnLayout" title="{oModelControl>/Pagetitle} {i18n>Form}" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
        <f:content>
            <Label text="{i18n>FormName}" required="true"/>
            <Input id="idEditFormNameINP" value="{FormDetailsModel>/Name}" enabled="false"/>
            <Label text="{i18n>FormType}" required="true"/>
            <ComboBox id="idEditFormTypeCMB" placeholder="{i18n>SelectFormType}" items="{/MasterFormTypes}" selectedKey="{FormDetailsModel>/FormTypeId}" enabled="false">
                <core:ListItem key="{Id}" text="{TypeText}"/>
            </ComboBox>
        </f:content>
    </f:SimpleForm>
    <Table id="idEditFMQuestionsTBL" mode="MultiSelect" selectionChange="onFormQueTableSelectionChange" class="sapUiSmallMarginBottom" noDataText="{i18n>tableNoDataText}" items="{path:'FormDetailsModel>/MasterFormQuestions', sorter: {path: 'Question/Question', descending: false}}" busyIndicatorDelay="0" growing="true" growingScrollToLoad="false" growingThreshold="10">
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>SelectedQuestions}"/>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>Questions}"/>
            </Column>
            <Column hAlign="End">
                <Text text="{i18n>Action}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem selected="true">
                <cells>
                    <Text text="{FormDetailsModel>Question/Question}"/>
                    <Button icon= "sap-icon://detail-view" press="onViewQuestionDetailsPress" type="Transparent" tooltip="View"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

    <Table id="idEditFMAvailableQuestionsTBL" mode="MultiSelect" rememberSelections="false" noDataText="{i18n>tableNoDataText}" busyIndicatorDelay="0" growing="true" growingScrollToLoad="false" growingThreshold="10">
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>AvailableQuestions}"/>
                <ToolbarSpacer/>
                <SearchField search="onQuestionFormsSearch" width="20%"/>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>Questions}"/>
            </Column>
            <Column hAlign="End">
                <Text text="{i18n>Action}"/>
            </Column>
        </columns>
    </Table>
</core:FragmentDefinition>