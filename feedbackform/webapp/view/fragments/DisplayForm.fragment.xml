<core:FragmentDefinition xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <f:SimpleForm editable="true" layout="ColumnLayout" title="{oModelControl>/Pagetitle} {i18n>Form}" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
        <f:content>
            <Label text="{i18n>FormName}"/>
            <Input id="idDisplayFormNameINP" value="{FormDetailsModel>/Name}" enabled="false"/>
            <Label text="{i18n>FormType}"/>
            <ComboBox id="idDisplayFormTypeCMB" items="{/MasterFormTypes}" selectedKey="{FormDetailsModel>/FormTypeId}" enabled="false">
                <core:ListItem key="{Id}" text="{TypeText}"/>
            </ComboBox>
        </f:content>
    </f:SimpleForm>
    <Table id="idDisplayFMQuestionsTBL" mode="None" noDataText="{i18n>tableNoDataText}" items="{path:'FormDetailsModel>/MasterFormQuestions', sorter: {path: 'Question/Question', descending: false}}" busyIndicatorDelay="0" growing="true" growingScrollToLoad="false" growingThreshold="10" updateFinished="onQuestionFormListUpdated">
        <headerToolbar>
            <OverflowToolbar>
                <Title/>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>Questions}"/>
            </Column>
            <Column hAlign="End">
                <Text text="{i18n>Action}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{FormDetailsModel>Question/Question}"/>
                    <Button icon= "sap-icon://detail-view" press="onViewQuestionDetailsPress" type="Transparent" tooltip="View"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>